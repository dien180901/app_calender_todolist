<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_custom_calendar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#009688">

        <ImageButton
            android:id="@+id/btnprevious"
            android:background="@mipmap/btn_pre1"
            android:layout_margin="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:textColor="#FFF "
            android:layout_marginTop="4dp"
            android:text="Current Date"
            android:textSize="18sp"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btnnext"
            android:background="@mipmap/btn_next_1"
            android:layout_margin="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:background="#8BC34A"
            android:text="Mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:background="#4CAF50"
            android:text="Tue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:background="#557A2A"
            android:text="Wed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:background="#78D509"
            android:text="Thu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:background="#BDE68F"
            android:text="Fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:background="#3C6907"
            android:text="SAT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:background="#CDDC39"
            android:text="Sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="7"
        android:id="@+id/gridview">


    </GridView>


</LinearLayout>